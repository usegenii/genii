{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "templates/**/*.js", "templates/**/*.d.ts"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"check:fix": {
			"dependsOn": ["^check:fix"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
