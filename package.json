{
	"name": "usegenii",
	"version": "1.0.0",
	"description": "CLI and daemon for managing AI agents and communication channels",
	"type": "module",
	"bin": {
		"genii": "./node_modules/@genii/cli/dist/genii.js",
		"genii-daemon": "./node_modules/@genii/daemon/dist/daemon.js"
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "turbo run typecheck",
		"test": "turbo run test",
		"prepublishOnly": "pnpm build",
		"publish:all": "./scripts/publish-all.sh",
		"publish:dry-run": "./scripts/publish-all.sh --dry-run"
	},
	"keywords": [
		"ai",
		"agents",
		"cli",
		"daemon"
	],
	"author": "",
	"license": "MIT",
	"packageManager": "pnpm@10.24.0",
	"dependencies": {
		"@genii/cli": "workspace:*",
		"@genii/daemon": "workspace:*"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.12",
		"tsup": "8.5.1",
		"tsx": "4.21.0",
		"turbo": "2.7.6"
	}
}
