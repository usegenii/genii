{
	"name": "@genii/config",
	"version": "1.0.0",
	"description": "Configuration management for genii",
	"type": "module",
	"main": "./dist/config.js",
	"types": "./dist/config.d.ts",
	"exports": {
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"keywords": [
		"config",
		"toml",
		"secrets"
	],
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/usegenii/genii"
	},
	"packageManager": "pnpm@10.30.2",
	"dependencies": {
		"@napi-rs/keyring": "1.2.0",
		"@sinclair/typebox": "0.34.48",
		"smol-toml": "1.6.0"
	},
	"devDependencies": {
		"@types/node": "24.10.13",
		"tsup": "8.5.1",
		"typescript": "5.9.3",
		"vitest": "3.2.4"
	}
}
